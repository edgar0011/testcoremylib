{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "./dist/lib",
    "sourceMap": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "module":"commonjs",
    "target": "esnext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts*",
    "src/**/*.spec.ts*",
    "test/**/*"
  ]
}
